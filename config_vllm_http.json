{
  "api": {
    "use_local_models": true,
    "use_vllm_http": true,
    "vllm_server_url": "http://localhost:8000/v1",
    "api_key": "fake-keys",
    "default_backend": "vllm_http",
    "timeout": 120.0
  },
  "models": {
    "qa_generator_model": {
      "name": "qwen-vllm",
      "temperature": 0.7,
      "max_tokens": 2048
    },
    "quality_checker_model": {
      "name": "qwen-vllm",
      "temperature": 0.3,
      "max_tokens": 512
    },
    "local_models": {
      "default_backend": "vllm_http",
      "local_model_priority": ["vllm_http", "ollama", "vllm"],
      "vllm_http": {
        "base_url": "http://localhost:8000/v1",
        "api_key": "dummy-key",
        "model_name": "qwen-vllm",
        "temperature": 0.7,
        "max_tokens": 2048,
        "top_p": 0.95,
        "timeout": 300
      },
      "ollama": {
        "base_url": "http://localhost:11434",
        "model": "qwen2.5:32b",
        "temperature": 0.7,
        "max_tokens": 2048,
        "stream": false
      }
    }
  },
  "paths": {
    "pdf_dir": "data/pdfs",
    "text_dir": "data/texts",
    "output_dir": "data/output",
    "qa_output_dir": "data/qa_results",
    "pdf_output_dir": "data/qa_results/pdfs",
    "text_output_dir": "data/qa_results/texts",
    "log_dir": "logs"
  },
  "processing": {
    "chunk_size": 2000,
    "chunk_overlap": 200,
    "max_chunks_per_file": 50,
    "batch_size": 32,
    "pool_size": 1,
    "timeout": 300,
    "max_retries": 3,
    "retry_delay": 1.0
  },
  "quality_check": {
    "enabled": true,
    "min_answer_length": 50,
    "max_answer_length": 2000,
    "require_context": true,
    "check_relevance": true,
    "min_quality_score": 0.7
  },
  "output": {
    "format": "json",
    "include_metadata": true,
    "include_quality_scores": true,
    "save_intermediate": true,
    "generate_report": true
  }
}